<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Nền màu trắng hơi trong suốt để nhìn thấy ảnh bên dưới -->
    <solid android:color="@color/gray_medium" /> <!-- CC = ~80% opacity -->

    <!-- Bo góc để trông mềm mại -->
    <corners android:radius="12dp" />

    <!-- Thêm một chút padding nội bộ cho đẹp -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />

    <!-- (Optional) viền mảnh xám nhạt -->
    <stroke
        android:width="1dp"
        android:color="@color/gray_medium" />
</shape>
